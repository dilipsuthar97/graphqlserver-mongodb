{
  "name": "server",
  "version": "2.0.0",
  "description": "GraphQL server with subscriptions",
  "main": "src/index.js",
  "engines": {
    "node": "15.5.0"
  },
  "scripts": {
    "dev": "nodemon --exec babel-watch src/index.js",
    "tunnel": "ngrok http 3000",
    "start": "npm run build && node ./build/index.js",
    "build": "npm run clean && npm run babel-build",
    "babel-build": "babel -d ./build ./src -s",
    "clean": "rm -rf build && mkdir build",
    "heroku-postbuild": "yarn install",
    "prettier": "prettier --single-quote --print-width 150 --tab-width 4 --trailing-comma all --write 'src/**/*.js'"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/polyfill": "^7.8.7",
    "apollo-server-express": "^2.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.2",
    "express": "^4.17.3",
    "faker": "^4.1.0",
    "graphql": "^15.0.0",
    "graphql-date": "^1.0.3",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.7",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-watch": "^7.0.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4"
  }
}
